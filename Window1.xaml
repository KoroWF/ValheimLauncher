<Window x:Class="ValheimLauncher.DriveSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValheimLauncher"
        mc:Ignorable="d"
        Title="DriveSelectionWindow" Height="225" Width="456" WindowStyle="None">
    <Grid Margin="10,10,0,7">
        <Grid.RowDefinitions>
            <RowDefinition Height="120" MinHeight="26.96"/>
            <RowDefinition Height="Auto" MinHeight="40"/>
            <RowDefinition Height="Auto" MinHeight="27.3"/>
        </Grid.RowDefinitions>

        <Label Content="Hier können Sie ein neues Installationslaufwerk auswählen,&#xD;&#xA;falls Sie ein anderes bevorzugen. Der Launcher wird danach neu gestartet.&#xA;&#xA;ACHTUNG: Alte Daten aus dem vorherigen Verzeichnis werden&#xD;&#xA;nach dem Klick auf 'OK' gelöscht!&#xA;&#xA;Bitte wählen Sie ein Laufwerk für die Installation:" Grid.Row="0" Margin="0,0,0,1"/>

        <ComboBox x:Name="DriveComboBox" Grid.Row="1" Margin="0,4,10,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="2" Margin="300,0,0,0" Width="129">
            <Button Content="OK" Click="OkButton_Click" IsDefault="True" Margin="0,0,5,0" Width="50"/>
            <Button Content="Abbrechen" Click="CancleButton_Click" />
        </StackPanel>
    </Grid>
</Window>
